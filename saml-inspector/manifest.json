{
  "manifest_version": 3,
  "name": "SAML Inspector",
  "version": "0.2",
  "description": "Capture and decode SAML messages from network and display them in the popup.",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SAML Inspector"
  }
}
